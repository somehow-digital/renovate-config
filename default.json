{
	"$schema": "./node_modules/renovate/renovate-schema.json",
	"extends": [
		":dependencyDashboard",
		":ignoreModulesAndTests",
		"group:monorepos",
		"group:recommended",
		"replacements:all",
		"workarounds:all"
	],
	"dependencyDashboard": true,
	"assigneesFromCodeOwners": true,
	"prConcurrentLimit": 0,
	"prHourlyLimit": 0,
	"semanticCommits": "enabled",
	"postUpdateOptions": ["pnpmDedupe"],
	"lockFileMaintenance": {
		"enabled": true,
		"commitMessageAction": "update pnpm lockfile",
		"schedule": ["* 0-6 * * 0"]
	},
	"vulnerabilityAlerts": {
		"enabled": true,
		"automerge": false,
		"labels": ["security"]
	},
	"packageRules": [
		{
			"matchFileNames": ["pnpm-lock.yaml"],
			"enabled": true,
			"schedule": ["at any time"]
		},
		{
			"matchPackageNames": ["drizzle-kit", "drizzle-orm", "drizzle-valibot"],
			"groupName": "drizzle"
		},
		{
			"matchPackageNames": ["@builder.io/qwik", "@builder.io/qwik-city"],
			"groupName": "qwik"
		},
		{
			"matchPackageNames": ["nuxthub", "@nuxthub/*"],
			"groupName": "nuxthub"
		}
	]
}
